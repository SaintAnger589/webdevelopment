<% include ./partials/header.ejs %>

<div class="ui main text container segment" id="blognew">
    <div class="ui huge header">Edit Blog</div>
    <form class="ui form" action="/blogs/<%=blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name = "blog[title]" value="<%=blog.title %>"></input>    
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name = "blog[image]" value = "<%=blog.image %>"></input>
        </div>
        <div class="field">
            <label>Blog Post</label>
            <textarea name = "blog[body]"><%= blog.body %></textarea>
        </div>
        <input class="ui primary button" type="submit"></input>
    </form>
</div>



